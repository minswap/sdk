{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2021", "DOM"],
    "declaration": true,
    "declarationDir": ".",
    "outDir": "build",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": ["build"]
}
